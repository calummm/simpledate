{
  "name": "@calummm/simpledate",
  "version": "1.0.0",
  "description": "",
  "types": "./dist/cjs/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/calummm/simpledate"
  },
  "homepage": "https://github.com/calummm/simpledate#readme",
  "bugs": {
    "url": "https://github.com/calummm/simpledate/issues"
  },
  "keywords": [
    "date",
    "simpledate",
    "date formatting",
    "date parsing",
    "iso8601"
  ],
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json && cp dist/esm/index.js dist/esm/index.mjs",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier . --write",
    "prepare": "husky install"
  },
  "author": "Calummm",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "@vitest/coverage-c8": "^0.31.0",
    "codecov": "^3.8.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "esm": "^3.2.25",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
